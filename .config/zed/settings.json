// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "show_edit_predictions": false,
  "features": {
    "edit_prediction_provider": null // "supermaven"
  },
  "agent": {
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "default_profile": "write",
    "inline_assistant_model": {
      "provider": "deepseek",
      "model": "deepseek-chat"
    },
    "default_model": {
      "provider": "deepseek",
      "model": "deepseek-reasoner"
    }
  },
  "vim_mode": true,
  "ui_font_size": 13,
  "buffer_font_size": 12,
  "relative_line_numbers": true,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Mocha (Blur) [Heavy]"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "file_types": {
    "CMake": ["CMakeLists.txt", "cmake"]
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "format_on_save": "off"
  // "formatter": "language_server"
}
